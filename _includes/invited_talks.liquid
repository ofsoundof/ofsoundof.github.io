<div class="news">
  {% if site.talks != blank %}
    {% assign invited_talks_size = site.talks | size %}
    <div
      class="table-responsive"
      {% if include.limit and page.invited_talks.scrollable and invited_talks_size > 3 %}
        style="max-height: 300px"
      {% endif %}
    >
      <table class="table table-sm table-borderless">
        {% assign invited_talks = site.talks | reverse %}
        {% if include.limit and page.invited_talks.limit %}
          {% assign invited_talks_limit = page.invited_talks.limit %}
        {% else %}
          {% assign invited_talks_limit = invited_talks_size %}
        {% endif %}
        {% for item in invited_talks limit: invited_talks_limit %}
          <tr>
            <th scope="row" style="width: 20%">{{ item.date | date: '%b %d, %Y' }}</th>
            <td>
              {% if item.inline %}
                {{ item.content | remove: '<p>' | remove: '</p>' | emojify }}
              {% else %}
                <a class="news-title" href="{{ item.url | relative_url }}">{{ item.title }}</a>
              {% endif %}
            </td>
          </tr>
        {% endfor %}
      </table>
    </div>
  {% else %}
    <p>No talks so far...</p>
  {% endif %}
</div>
